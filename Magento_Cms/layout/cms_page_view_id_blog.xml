<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="blog" template="Magento_Cms::blog/blog.phtml" cacheable="false">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="custom-blog" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Cms/js/blog</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Magento_Cms/blog</item>
                                </item>
                                <item name="children" xsi:type="array">
                                    <item name="login" xsi:type="array">
                                        <item name="sortOrder" xsi:type="string">0</item>
                                        <item name="component" xsi:type="string">Magento_Cms/js/form/login</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Magento_Cms/form/login</item>
                                        </item>
                                        <item name="displayArea" xsi:type="string">login</item>
                                    </item>
                                    <item name="blogGreet" xsi:type="array">
                                        <item name="sortOrder" xsi:type="string">0</item>
                                        <item name="component" xsi:type="string">Magento_Cms/js/blog-greet</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Magento_Cms/blog-greet</item>
                                        </item>
                                        <item name="displayArea" xsi:type="string">blogGreet</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
